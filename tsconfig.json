{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".", // wichtig für "paths"
    "moduleResolution": "Bundler", // RN/Expo-empfohlen (TS ≥5.0)
    "paths": {
      "@/*": ["./*"] // "@/…" zeigt auf Projektroot
      // Wenn du eine "src/"-Struktur bevorzugst:
      // "@/*": ["./src/*"]
    },
    "types": [
      "jest",
      "react",
      "react-native",
      "expo-router" // hilfreiche Router-Typen (v6)
    ],
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "app",
    "src",
    "babel.config.js"
  ]
}
